{
  "openapi": "3.0.0",
  "info": {
    "title": "supplier",
    "version": "1.0",
    "contact": {
      "name": "coke",
      "email": "team-coke@aftership.com"
    },
    "description": "supplier"
  },
  "servers": [
    {
      "url": "http://platform.automizelyAPI.com/suppliers",
      "description": "Production_url"
    }
  ],
  "paths": {
    "/v1/vendor-products": {
      "post": {
        "summary": "vendor-products",
        "operationId": "post-v1-vendor-products",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "external_vendor_product_id": {
                      "type": "string"
                    },
                    "universal_id": {
                      "type": "string"
                    },
                    "supplier": {
                      "$ref": "#/components/schemas/supplier"
                    },
                    "title": {
                      "type": "string"
                    },
                    "body_html": {
                      "type": "string"
                    },
                    "categories": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/category"
                      }
                    },
                    "available_to_sell": {
                      "type": "boolean",
                      "description": "true of false, it will be false, say no stock, or manually mark it to false\ntrue:  describe if supplier can allow us refund\nfalse: describe if supplier can not allow us refund"
                    },
                    "accept_refund": {
                      "type": "boolean"
                    },
                    "accept_returns": {
                      "type":"boolean"
                    },
                    "brand": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "condition": {
                      "type": "string"
                    },
                    "image_urls": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "format": "uri"
                      }
                    },
                    "shipping_prices": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/shipping_price"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "description": "vendor-products",
        "tags": [
          "vendor-product"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "supplier": {
        "title": "supplier",
        "type": "object",
        "description": "供应商信息",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        },
        "x-examples": {
          "example": {
            "id": "uuid",
            "name": "Eprolo",
            "code": "eprolo"
          }
        }
      },
      "category": {
        "title": "category",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        },
        "x-examples": {
          "example": {
            "id": "kiuee699559924f9db48eced2ae23987h",
            "name": "Fashion",
            "code": "fashion"
          }
        },
        "description": "category",
        "x-tags": [
          "suppliers"
        ]
      },
      "shipping_option": {
        "title": "shipping_option",
        "type": "object",
        "x-examples": {
          "example": {
            "external_option_id": "879923",
            "shipping_method": "ePacket",
            "country": "ALA",
            "shipping_time_sla": "2 - 3 Business days",
            "price": [
              {
                "unit": 1,
                "amount": 4,
                "currency": "USD"
              }
            ]
          }
        },
        "description": "shipping_option",
        "x-tags": [
          "suppliers"
        ],
        "properties": {
          "external_option_id": {
            "type": "string",
            "description": "it should be epro shipment template ID"
          },
          "shipping_method": {
            "type": "string",
            "description": "the name of the \"service\": DHL Next Day, China EMS"
          },
          "country": {
            "type": "string"
          },
          "shipping_time_sla": {
            "type": "string"
          },
          "price": {
            "type": "array",
            "items": {
              "$ref": "../common/model/price.v1.json"
            }
          }
        }
      },
      "shipping_price": {
        "title": "shipping_prices",
        "type": "object",
        "properties": {
          "variant_ids": {
            "type": "string"
          },
          "external_ecommerce_variant_ids": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "shipping_options": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/shipping_option"
            }
          }
        },
        "description": "shipping_prices"
      }
    }
  }
}